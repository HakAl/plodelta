<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>


    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    <PublishReadyToRun>false</PublishReadyToRun> <!-- no R2R = smaller -->
    <InvariantGlobalization>true</InvariantGlobalization> <!-- drop culture tables -->
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="PlodeltaImport.Tests" />
    <Compile Remove="PlodeltaImport.Tests\**" />
    <EmbeddedResource Remove="PlodeltaImport.Tests\**" />
    <None Remove="PlodeltaImport.Tests\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Net.Http" Version="4.3.4" />
    <PackageReference Include="System.Text.RegularExpressions" Version="4.3.1" />
  </ItemGroup>

</Project>